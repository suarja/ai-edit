{
  "metadata": {
    "version": "1.0.0",
    "name": "EditIA Mobile Design System",
    "description": "Extracted from script-video-settings.tsx and VideoSettingsSection.tsx",
    "author": "Jason Suarez",
    "theme": "dark-first",
    "lastUpdated": "2025-01-21"
  },
  "colors": {
    "background": {
      "primary": "#000000",
      "secondary": "#1a1a1a",
      "tertiary": "#333333",
      "usage": "primary: app backgrounds, secondary: cards/modals, tertiary: borders"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#cccccc",
      "tertiary": "#888888",
      "disabled": "#555555",
      "usage": "primary: main content, secondary: descriptions, tertiary: metadata"
    },
    "interactive": {
      "primary": "#007AFF",
      "primaryHover": "rgba(0, 122, 255, 0.8)",
      "primaryBackground": "rgba(0, 122, 255, 0.1)",
      "success": "#04f827",
      "warning": "#FF9500",
      "error": "#FF3B30",
      "usage": "primary: buttons/links, success: completion states, warning: attention, error: limits/errors"
    },
    "surface": {
      "overlay": "rgba(0, 0, 0, 0.5)",
      "errorBackground": "rgba(255, 59, 48, 0.08)",
      "errorBorder": "rgba(255, 59, 48, 0.2)",
      "warningBackground": "rgba(255, 149, 0, 0.08)",
      "warningBorder": "rgba(255, 149, 0, 0.2)",
      "usage": "overlay: modals, errorBackground/warningBackground: alert states"
    }
  },
  "typography": {
    "fontFamily": "system",
    "scales": {
      "display": {
        "fontSize": 24,
        "fontWeight": "700",
        "lineHeight": 32,
        "usage": "Screen titles, major headings"
      },
      "title": {
        "fontSize": 20,
        "fontWeight": "600",
        "lineHeight": 26,
        "usage": "Section titles, card headers"
      },
      "headline": {
        "fontSize": 16,
        "fontWeight": "600",
        "lineHeight": 22,
        "usage": "Subsection headers, important labels"
      },
      "body": {
        "fontSize": 15,
        "fontWeight": "400",
        "lineHeight": 22,
        "usage": "Main content, descriptions"
      },
      "callout": {
        "fontSize": 14,
        "fontWeight": "500",
        "lineHeight": 18,
        "usage": "Buttons, active labels, metadata"
      },
      "caption": {
        "fontSize": 13,
        "fontWeight": "500",
        "lineHeight": 16,
        "usage": "Secondary info, warnings, counters"
      },
      "micro": {
        "fontSize": 12,
        "fontWeight": "400",
        "lineHeight": 16,
        "usage": "Fine print, tags, small labels"
      },
      "tiny": {
        "fontSize": 10,
        "fontWeight": "400",
        "lineHeight": 14,
        "usage": "Minimal text, effect descriptions"
      }
    }
  },
  "spacing": {
    "scale": {
      "xs": 4,
      "sm": 8,
      "md": 12,
      "lg": 16,
      "xl": 20,
      "2xl": 24,
      "3xl": 32
    },
    "semantic": {
      "screenPadding": 20,
      "cardPadding": 16,
      "buttonPadding": 12,
      "sectionGap": 24,
      "componentGap": 16,
      "elementGap": 12,
      "usage": "Use semantic names in components for consistency"
    }
  },
  "borderRadius": {
    "sm": 8,
    "md": 10,
    "lg": 12,
    "xl": 16,
    "usage": "sm: buttons, md: alerts, lg: cards, xl: modals"
  },
  "borders": {
    "thin": 1,
    "medium": 2,
    "thick": 3,
    "colors": {
      "default": "#333333",
      "active": "#007AFF",
      "error": "rgba(255, 59, 48, 0.2)",
      "warning": "rgba(255, 149, 0, 0.2)"
    }
  },
  "shadows": {
    "note": "iOS apps typically avoid heavy shadows in dark themes",
    "subtle": "rgba(255, 255, 255, 0.05)",
    "overlay": "rgba(0, 0, 0, 0.3)"
  },
  "interactions": {
    "touchTarget": {
      "minSize": 44,
      "description": "Minimum touch target size for accessibility"
    },
    "haptics": {
      "light": "selection feedback",
      "medium": "success actions",
      "heavy": "error states"
    },
    "animations": {
      "fast": "200ms",
      "normal": "300ms",
      "slow": "500ms",
      "easing": "ease-out"
    },
    "activeOpacity": 0.8
  },
  "components": {
    "buttons": {
      "primary": {
        "backgroundColor": "#007AFF",
        "textColor": "#ffffff",
        "borderRadius": 12,
        "padding": "12px 16px",
        "fontSize": 14,
        "fontWeight": "600"
      },
      "secondary": {
        "backgroundColor": "#1a1a1a",
        "textColor": "#ffffff",
        "borderColor": "#333333",
        "borderWidth": 1,
        "borderRadius": 8,
        "padding": "12px 16px"
      },
      "ghost": {
        "backgroundColor": "transparent",
        "textColor": "#007AFF",
        "padding": "8px 12px"
      }
    },
    "cards": {
      "primary": {
        "backgroundColor": "#1a1a1a",
        "borderRadius": 16,
        "padding": 16,
        "borderColor": "#333333",
        "borderWidth": 1
      },
      "interactive": {
        "backgroundColor": "#1a1a1a",
        "borderRadius": 16,
        "padding": 16,
        "borderColor": "#333333",
        "borderWidth": 1,
        "activeOpacity": 0.8
      },
      "preview": {
        "backgroundColor": "#1a1a1a",
        "borderRadius": 12,
        "padding": 20,
        "minHeight": 80,
        "alignItems": "center",
        "justifyContent": "center"
      }
    },
    "alerts": {
      "error": {
        "backgroundColor": "rgba(255, 59, 48, 0.08)",
        "borderColor": "rgba(255, 59, 48, 0.2)",
        "borderWidth": 1,
        "borderRadius": 10,
        "padding": 12,
        "textColor": "#FF3B30"
      },
      "warning": {
        "backgroundColor": "rgba(255, 149, 0, 0.08)",
        "borderColor": "rgba(255, 149, 0, 0.2)",
        "borderWidth": 1,
        "borderRadius": 10,
        "padding": 12,
        "textColor": "#FF9500"
      }
    },
    "modals": {
      "overlay": {
        "backgroundColor": "rgba(0, 0, 0, 0.5)"
      },
      "content": {
        "backgroundColor": "#1a1a1a",
        "borderRadius": 16,
        "padding": 24,
        "margin": 20
      }
    },
    "toggles": {
      "switch": {
        "trackColor": {
          "false": "#333333",
          "true": "#007AFF"
        },
        "thumbColor": {
          "false": "#888888",
          "true": "#ffffff"
        }
      }
    },
    "presets": {
      "quickPreset": {
        "backgroundColor": "#1a1a1a",
        "borderRadius": 12,
        "padding": 16,
        "width": 140,
        "borderWidth": 2,
        "borderColor": "transparent",
        "alignItems": "center",
        "gap": 8
      },
      "selectedPreset": {
        "borderColor": "#007AFF",
        "backgroundColor": "rgba(0, 122, 255, 0.1)"
      }
    }
  },
  "patterns": {
    "conversationalCards": {
      "description": "Cards that feel like chat bubbles with immediate interaction",
      "structure": {
        "header": "title + icon/chevron",
        "content": "preview or description",
        "interaction": "tap to expand/configure"
      }
    },
    "livePreview": {
      "description": "Real-time preview of user changes",
      "requirements": [
        "Immediate feedback on changes",
        "Visual representation of settings",
        "Clear before/after states"
      ]
    },
    "progressiveDisclosure": {
      "description": "Show complexity only when needed",
      "implementation": {
        "collapsed": "Show summary/preview",
        "expanded": "Show full controls",
        "transition": "Smooth animation between states"
      }
    },
    "horizontalScrolling": {
      "description": "Thumb-friendly option selection",
      "usage": [
        "Presets selection",
        "Color options",
        "Effect choices"
      ],
      "spacing": {
        "containerPadding": 4,
        "itemGap": 12
      }
    },
    "aiLoadingStates": {
      "description": "Engaging loading states for AI operations",
      "elements": [
        "Progress indicator",
        "Current step description",
        "Estimated time remaining",
        "Cancel option when possible"
      ]
    }
  },
  "layouts": {
    "screen": {
      "padding": 20,
      "backgroundColor": "#000000",
      "safeArea": true
    },
    "scrollView": {
      "showsVerticalScrollIndicator": false,
      "contentInsetAdjustmentBehavior": "automatic"
    },
    "sectionSpacing": 24,
    "componentSpacing": 16
  },
  "accessibility": {
    "minTouchTarget": 44,
    "colorContrast": "WCAG AA compliant",
    "focusIndicator": "#007AFF",
    "reducedMotion": "Respect system preferences"
  },
  "bestPractices": {
    "dos": [
      "Use consistent spacing from the scale",
      "Provide immediate visual feedback",
      "Keep touch targets minimum 44px",
      "Use semantic color names",
      "Test in dark mode first",
      "Implement loading states for AI operations",
      "Use horizontal scrolling for option sets",
      "Show live previews when possible"
    ],
    "donts": [
      "Don't use hardcoded colors",
      "Don't create tiny touch targets",
      "Don't hide important actions",
      "Don't use light colors on dark backgrounds without testing",
      "Don't make users wait without feedback",
      "Don't overuse animations",
      "Don't break established interaction patterns"
    ]
  },
  "migration": {
    "fromStyleSheet": {
      "backgroundColor": "colors.background.*",
      "color": "colors.text.*",
      "fontSize": "typography.scales.*.fontSize",
      "fontWeight": "typography.scales.*.fontWeight",
      "padding": "spacing.semantic.*",
      "margin": "spacing.semantic.*",
      "borderRadius": "borderRadius.*",
      "borderColor": "borders.colors.*",
      "borderWidth": "borders.*"
    },
    "toTailwind": {
      "planned": true,
      "customClasses": {
        "bg-primary": "#000000",
        "bg-secondary": "#1a1a1a",
        "text-primary": "#ffffff",
        "text-secondary": "#cccccc",
        "accent-blue": "#007AFF"
      }
    }
  }
}